<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="CYTextView">
        <attr name="textwidth" format="integer" />
        <attr name="typeface">
            <enum name="normal" value="0" />
            <enum name="sans" value="1" />
            <enum name="serif" value="2" />
            <enum name="monospace" value="3" />
        </attr>
        <attr name="cy_textSize" format="dimension" />
        <attr name="cy_textColor" format="reference|color" />
        <attr name="lineSpacingExtra" format="dimension" />
    </declare-styleable>
    <declare-styleable name="autoScrollHeight">
        <attr name="textSize" format="dimension" />

        <attr name="animDuration" format="integer" />
        <attr name="scrollDuration" format="integer" />
        <attr name="textColor" format="color" />
    </declare-styleable>
</resources>
