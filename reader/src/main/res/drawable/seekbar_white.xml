<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dip" />
            <gradient
                android:angle="270"
                android:centerColor="#50929292"
                android:centerY="0.75"
                android:endColor="#50929292"
                android:startColor="#50929292" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/white_yellow"
                    android:centerY="0.75"
                    android:endColor="@color/white_yellow"
                    android:startColor="@color/white_yellow" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/white_yellow"
                    android:centerY="0.75"
                    android:endColor="@color/white_yellow"
                    android:startColor="@color/white_yellow" />
            </shape>
        </clip>
    </item>
</layer-list>